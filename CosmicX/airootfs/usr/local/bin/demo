#!/bin/bash

# Logo image path (adjust this to where your logo actually is)
LOGO="/usr/share/logos/logo.png"
RESIZED_LOGO="/tmp/resized_logo.png"

# Resize the logo to a larger, centered size
convert "$LOGO" -resize 300x300 "$RESIZED_LOGO"

# Main message
MESSAGE="<b>XeroLinux Demo :</b>\n\nThis Demo is for testing purposes only, since the installer is not included and cow-space is pretty limited (100MiB), so you won’t be able to update or install big packages. It's just for testing, so don’t try updating, it won’t work because of the space limit. Furthermore, Live Environment is not persistent, installing anything that requires a reboot, like Drivers is therefore impossible, keep that in mind before attempting to do so.

Finally, this is still work-in-progress, and the DE is still in <b>Alpha Stages</b>. No Unlocked ISO exists as of yet."

# Loop the dialog to prevent exit on button click
while true; do
  response=$(yad --center \
      --width=800 --height=400 \
      --title="XeroLinux Demo ISOs Info" \
      --image="$RESIZED_LOGO" \
      --image-on-top \
      --text="$MESSAGE" \
      --wrap \
      --buttons-layout=center \
      --button="Main Site!:1" \
      --button="Mastodon!:2" \
      --button="Discord!:3" \
      --button="YouTube!:4" \
      --button="Unlocked ISOs!:5")

  exit_code=$?

  case $exit_code in
    1) xdg-open "https://xerolinux.xyz" ;;
    2) xdg-open "https://fosstodon.org/@XeroLinux" ;;
    3) xdg-open "https://discord.xerolinux.xyz" ;;
    4) xdg-open "https://youtube.com/@XeroLinux" ;;
    5) xdg-open "https://ko-fi.com/xerolinux/shop" ;;
    0) break ;; # User closed the window
    *) break ;;
  esac

done
